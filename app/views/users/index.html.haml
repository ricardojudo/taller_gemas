%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Password
      %th Username
      %th Email
      %th{:colspan=>"3"}
            
  %tbody
    -@users.each do |user|
      %tr
        %td= user.name
        %td= user.password
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
      

= link_to 'New User', new_user_path
