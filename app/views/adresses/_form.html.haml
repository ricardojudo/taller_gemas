= form_for @adress do |f|
  - if @adress.errors.any?
    #error_explanation
      %h2= "#{pluralize(@adress.errors.count, "error")} prohibited this adress from being saved:"
      %ul
        - @adress.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'
